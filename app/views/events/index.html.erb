<div class="container">
  <div class="row">
  <% @events.each do |event| %> 
    <div class="col-sm-6 card-deck">
    <div class="card mb-3" style="width: 20rem; text-align: center">
      <div class="card-body">
        <h5 class="card-title"><%= event.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted">Admin :<%= User.find_by(id:event.user_id).first_name %></h6>
            <p class="card-text"><%= event.description %></p>
            <p class="card-text">Start Date : <%= event.start_date %></p>            
            <a href="<%= event_path(event.id) %>" class="card-link btn btn-dark">Show</a>
      </div>
    </div>
    </div>
  <% end %>   
  </div>
  logged in as <%=current_user.email if current_user%>
  <div class="left_a" style="margin-right:10px;">
  <a href="<%= new_event_path%>" class ="btn btn-light">Cr√©er un Event</a>
  </div>
</div>




